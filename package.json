{
    "name": "combocss",
    "version": "0.6.6",
    "description": "ComboCSS a CSS Toolkit for combining CSS properties",
    "keywords": [
        "conbocss",
        "postcss",
        "css",
        "postcss-plugin"
    ],
    "bin": {
        "combo": "lib/cli.js"
    },
    "scripts": {
        "test": "node index.test.js"
    },
    "author": "Benjamin Lotterer <theedgesofben@hotmail.com>",
    "license": "MIT",
    "repository": "theedgesofben/combocss",
    "engines": {
        "node": ">=16.0.0"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": "latest"
        },
        "env": {
            "node": true,
            "es6": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:jest/recommended"
        ],
        "rules": {
            "jest/expect-expect": "off"
        }
    },
    "jest": {
        "coverageThreshold": {
            "global": {
                "statements": 100
            }
        },
        "transform": {}
    },
    "dependencies": {
        "autoprefixer": "^10.4.17",
        "chokidar": "^3.6.0",
        "commander": "^9.4.1",
        "fast-glob": "^3.2.11",
        "parse5": "^6.0.1",
        "stylelint": "^16.2.0"
    },
    "peerDependencies": {
        "postcss": "^8.3.0"
    },
    "devDependencies": {
        "clean-publish": "^3.4.2",
        "eslint": "^8.0.1",
        "eslint-plugin-jest": "^25.2.2",
        "jest": "^29.7.0",
        "postcss": "^8.4.6"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 160
    },
    "browserslist": [
        "last 15 version",
        "not dead"
    ],
    "type": "module",
    "main": "index.js"
}
