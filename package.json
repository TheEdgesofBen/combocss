{
    "name": "combocss",
    "version": "0.0.7",
    "description": "PostCSS plugin for leto",
    "keywords": [
        "conbocss",
        "postcss",
        "css",
        "postcss-plugin"
    ],
    "bin": {
        "combo": "lib/cli.js"
    },
    "scripts": {
        "test": "jest --coverage && eslint ."
    },
    "author": "Benjamin Lotterer <theedgesofben@hotmail.com>",
    "license": "MIT",
    "repository": "theedgesofben/combocss",
    "engines": {
        "node": ">=12.0.0"
    },
    "peerDependencies": {
        "postcss": "^8.3.0"
    },
    "devDependencies": {
        "clean-publish": "^3.4.2",
        "eslint": "^8.0.1",
        "eslint-plugin-jest": "^25.2.2",
        "jest": "^27.3.1",
        "postcss": "^8.4.6",
        "sass": "^1.49.7"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": "latest"
        },
        "env": {
            "node": true,
            "es6": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:jest/recommended"
        ],
        "rules": {
            "jest/expect-expect": "off"
        }
    },
    "jest": {
        "coverageThreshold": {
            "global": {
                "statements": 100
            }
        }
    },
    "dependencies": {
        "chokidar": "^3.5.3",
        "commander": "^9.4.1",
        "fast-glob": "^3.2.11",
        "parse5": "^6.0.1"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 160
    }
}
